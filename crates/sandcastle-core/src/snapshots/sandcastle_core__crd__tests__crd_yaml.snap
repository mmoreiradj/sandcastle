    kind: HelmChart
    spec:
      chart: ingress-nginx
      repository: https://kubernetes.github.io/ingress-nginx
      version: 4.8.0
      namespace: default
  - name: database
    kind: HelmChart
    spec:
      chart: ingress-nginx
      repository: https://kubernetes.github.io/ingress-nginx
      version: 4.8.0
      set:
      - path: key
        value: value
      namespace: default
