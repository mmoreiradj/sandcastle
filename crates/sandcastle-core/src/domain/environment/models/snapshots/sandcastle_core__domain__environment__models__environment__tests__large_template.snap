---
source: crates/sandcastle-core/src/domain/environment/models/environment.rs
expression: result
---
---
custom:
  baseDomain: "sandcastle.dev"
  whatever:
    key: "value"
global:
  images:
    frontend:
      # Image hint to find the images in:
      # - github checks
      # - container registry
      hint: "ghcr.io/mmoreiradj/sandcastle-monorepo-test/frontend"
---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: frontend-sandcastle-monorepo-test-1
  namespace: argocd
spec:
  project: default
  source:
    path: "charts/frontend" 
    repoURL: "https://github.com/mmoreiradj/sandcastle-monorepo-test"
    targetRevision: "1234567890"
    helm:
      valuesObject:
        ingress:
          enabled: true
          className: "traefik"
          hosts:
            - host: "frontend-sandcastle-monorepo-test-1.sandcastle.dev"
              paths:
                - path: /
                  pathType: ImplementationSpecific
        image:
          tag: "1234567890"
  destination:
    server: "https://kubernetes.default.svc"
    namespace: "sandcastle-monorepo-test-1"
